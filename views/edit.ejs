<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= student.name %></div>
        <form class="ui form" action="/students/<%= student._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Name</label>
                <input type="text" name="student[name]" value="<%= student.name %>">
            </div>
            <div class="field">
                <label>Email</label>
                <input type="email" name="student[email]" value="<%= student.email %>">
            </div>
            <div class="field">
                <label>Age</label>
                <input type="number" name="student[age]" value="<%= student.age %>">
            </div>
            <div class="field">
                <label>Phone number</label>
                <input type="text" name="student[phoneNumber]" value="<%= student.phoneNumber %>">
            </div>
            <div class="field">
                <label>Available to Start</label>
                <input type="date" name="student[availableToStart]" value="<%= student.availableToStart %>">
            </div> 
            <div class="field">
                <label>Technical Skills and Courses</label>
                <textarea name="student[technicalSkills]"><%= student.technicalSkills %></textarea>
            </div> 
            <div class="field">
                <label>Short Personal Presentation</label>
                <textarea name="student[personalPresentation]"><%= student.personalPresentation %></textarea>
            </div> 
                       
            <input class="ui violet big basic button" type="submit">
        </form>
</div>

<%- include("partials/footer") %>